          <% } else if (team.name === "Cowboys") { %>
            <img src="/views/logos/cowboys.png" alt="Cowboys image" />
          <% } else if (team.name === "Broncos") { %>
            <img src="/views/logos/broncos.png" alt="Broncos image" />
          <% } else if (team.name === "Lions") { %>
            <img src="/views/logos/lions.jpg" alt="Lions image" />
          <% } else if (team.name === "Packers") { %>
            <img src="/views/logos/packers.jpg" alt="Packers image" />
          <% } else if (team.name === "Texans") { %>
            <img src="/views/logos/texans.png" alt="Texans image" />
          <% } else if (team.name === "Colts") { %>
