            <img src="/views/logos/dolphins.png" alt="Dolphins image" />
          <% } else if (team.name === "Vikings") { %>
            <img src="/views/logos/vikings.jpg" alt="Vikings image" />
          <% } else if (team.name === "Patriots") { %>
            <img src="/views/logos/patriots.jpg" alt="Patriots image" />
          <% } else if (team.name === "Saints") { %>
