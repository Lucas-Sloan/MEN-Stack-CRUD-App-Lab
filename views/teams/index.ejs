<!-- views/teams/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Teams Index</title>
  </head>
  <body>
    <div class="index-header-div">
      <h1>All NFL Teams</h1>
      <a class="add-team" href="/teams/new">Add New Team</a>
    </div>
    <div class="teams-container">
      <% teams.forEach(team => { %>
        <a href="/teams/<%= team._id %>" class="team-cards">
          <% if (team.imageUrl) { %>
            <img src="<%= team.imageUrl %>" alt="<%= team.name %> image" />
          <% } else if (team.name === "Cardinals") { %>
            <img src="/views/logos/cardinals.png" alt="Cardinals image" />
          <% } else if (team.name === "Falcons") { %>
            <img src="/views/logos/falcons.png" alt="Falcons image" />
          <% } else if (team.name === "Ravens") { %>
            <img src="/views/logos/ravens.png" alt="Ravens image" />
          <% } else if (team.name === "Bills") { %>
            <img src="/views/logos/bills.png" alt="Bills image" />
          <% } else if (team.name === "Panthers") { %>
            <img src="/views/logos/panthers.png" alt="Panthers image" />
          <% } else if (team.name === "Bears") { %>
            <img src="/views/logos/bears.png" alt="Bears image" />
          <% } else if (team.name === "Bengals") { %>
